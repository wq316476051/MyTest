<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wang.mytest.ui">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--animation-->
        <activity android:name="com.wang.mytest.ui.animation.FragmentAnimationActivity" />

        <activity android:name=".accessibility.AccessibilityActivity" />
        <activity android:name=".accessibility2.Accessibility2Activity" />

        <activity android:name="com.wang.mytest.ui.fragment.FragmentAlertDialogSupport" />
        <activity android:name="com.wang.mytest.ui.fragment.AnimFragmentActivity" />

        <!--views-->
        <activity android:name="com.wang.mytest.ui.view.DeleteDialogActivity" />
        <activity android:name="com.wang.mytest.ui.view.DrawActivity" />
        <activity android:name="com.wang.mytest.ui.view.DrawRecordActivity" />
        <activity android:name="com.wang.mytest.ui.view.ViewActivity" />
        <activity android:name="com.wang.mytest.ui.view.webview.MyWebViewActivity" />
        <activity android:name="com.wang.mytest.ui.view.custom.CustomViewActivity" />
        <activity android:name="com.wang.mytest.ui.view.custom.MatrixActivity">
            <intent-filter>
                <action android:name="test.TEST" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data android:name="test.SUMMARY"
                android:value="Matrix"/>
            <meta-data android:name="test.TEST"
                android:value="/activity/view/custom/matrix"/>
        </activity>

        <activity android:name="com.wang.mytest.ui.layout.CardLayoutActivity" />
        <activity android:name="com.wang.mytest.ui.layout.CoordinateLayoutActivity" />
        <activity android:name="com.wang.mytest.ui.layout.ConstraintLayoutActivity" />
        <activity android:name="com.wang.mytest.ui.layout.ConstraintLayoutActivity2" />
        <activity android:name="com.wang.mytest.ui.layout.ViewPager2Activity" />

        <activity android:name="com.wang.mytest.ui.view.recycler_view.RecyclerViewActivity" />
        <activity android:name="com.wang.mytest.ui.view.search_view.SearchViewActivity" />
        <activity android:name="com.wang.mytest.ui.view.surface_view.SurfaceViewActivity" />
        <activity android:name=".feature.ui.systembars.SystemBarsActivity"
            android:theme="@style/AppCompat_Aaa">
            <intent-filter>
                <action android:name="test.TEST" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data android:name="test.SUMMARY"
                android:value="SystemBars"/>
            <meta-data android:name="test.TEST"
                android:value="/activity/systemBars"/>
        </activity>
    </application>

</manifest>