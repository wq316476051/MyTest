<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="SystemBars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_dim_sysetm_bars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dim SystemBars"
            android:textAllCaps="false"
            android:autoSizeTextType="uniform" />

        <Button
            android:id="@+id/btn_hide_sysetm_bars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hide SystemBars"
            android:textAllCaps="false"
            android:autoSizeTextType="uniform" />

        <Button
            android:id="@+id/btn_immsersive_sysetm_bars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Immersive SystemBars"
            android:textAllCaps="false"
            android:autoSizeTextType="uniform" />

        <Button
            android:id="@+id/btn_reset_system_bars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset SystemBars"
            android:textAllCaps="false"
            android:autoSizeTextType="uniform" />
    </LinearLayout>
</LinearLayout>